@model List<ResultBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Misafir</th>
                            <th>Giriş Tarihi</th>
                            <th>Çıkış Tarihi</th>
                            <th>Durum</th>
                            <th>Onayla</th>
                            <th>İptal et</th>
                            <th>Beklet</th>
                            <th>Güncelle</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>@item.Name</td>
                                <td>@(((DateTime)item.Checkin).ToString("dd-MMMM-yyyy"))</td>
                                <td>@(((DateTime)item.Checkout).ToString("dd-MMMM-yyyy"))</td>
                    <td>
                        <span class="badge px-3 @(item.Status == "Onaylandı" ? "btn mb-1 btn-rounded btn-success" :
                        item.Status == "Müşteri Aranacak" ? "btn mb-1 btn-rounded btn-warning" :
                        item.Status == "İptal Edildi" ? "btn mb-1 btn-rounded btn-danger" :
                        "btn btn-primary")">
                            @item.Status
                        </span>
                    </td>
                    <td><a href="/BookingAdmin/ApprovedReservation2/@item.BookingID" class="btn mb-1 btn-rounded btn-outline-success">Onayla</a></td>
                    <td><a href="/BookingAdmin/WaitReservation/@item.BookingID" class="btn mb-1 btn-rounded btn-outline-warning">Beklet</a></td>
                    <td><a href="/BookingAdmin/CancelReservation/@item.BookingID" class="btn mb-1 btn-rounded btn-outline-danger">İptal et</a></td>
                    <td><a href="/BookingAdmin/UpdateBooking/@item.BookingID" class="btn mb-1 btn-rounded btn-outline-info">Güncelle</a></td>
                    <td><a href="/BookingAdmin/DetailsBook/@item.BookingID" class="btn mb-1 btn-rounded btn-outline-dark">Detaylar</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

