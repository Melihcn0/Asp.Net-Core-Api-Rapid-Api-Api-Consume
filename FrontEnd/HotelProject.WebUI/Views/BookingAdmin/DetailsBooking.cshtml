@model HotelProject.WebUI.Dtos.BookingDto.DetailsBookingDto
@{
    ViewData["Title"] = "DetailsBooking";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Rezervasyon Detaylar Sayfası</h1>

<form method="get">
    <input type="hidden" required asp-for="BookingID" readonly />
    <label>Misafir Adı Soyadı</label>
    <input type="text" asp-for="Name" class="form-control" readonly />
    <br />
    <label>Misafir Mail Adresi</label>
    <input type="Email" asp-for="Mail" class="form-control" readonly />
    <br />
    <label>Misafir Giriş Tarihi</label>
    <input type="date" asp-for="Checkin" class="form-control" readonly />
    <br />
    <label>Misafir Çıkış Tarihi</label>
    <input type="date" asp-for="Checkout" class="form-control" readonly />
    <br />
    <label>Yetişkin Sayısı</label>
    <input type="text" asp-for="AdultCount" class="form-control" readonly />
    <br />
    <label>Çocuk Sayısı</label>
    <input type="text" asp-for="ChildCount" class="form-control" readonly />
    <br />
    <label>Oda Sayısı</label>
    <input type="text" asp-for="RoomCount" class="form-control" readonly />
    <br />
    <label>Şehir</label>
    <input type="text" asp-for="City" class="form-control" readonly />
    <br />
    <label>Ülke</label>
    <input type="text" asp-for="Country" class="form-control" readonly />
    <br />
    <label>Durum</label>
    <input type="text" asp-for="Status" class="form-control" readonly />
    <br />
    <label>Özel İstekler</label>
    <textarea class="form-control" rows="5" asp-for="SpecialRequest" readonly></textarea>
    <br />
    <label>Açıklama</label>
    <textarea class="form-control" rows="5" asp-for="Description" readonly></textarea>
    <br />
</form>
